@model ItemList

@{
    var mymodel = Model;
}

@if (Model.ItemListElements != null)
{
    for (int i = 0; i < Model.ItemListElements.Count; i++)
    {
        var item = Model.ItemListElements[i];

        <section class="banner w-100 position-relative">
            <div @Html.DxaEntityMarkup()>
                <div @Html.DxaPropertyMarkup(() => item.Media)>
                    <img src=@item.Media.Url alt="" class="img-fluid d-block w-100 banner-image-style"/>                   
                </div>
                <!-- remaining items like gadget, banner center title -->
                <div class="container-fluid position-absolute" style="bottom:50%;width:100%;left:50%;transform:translate(-50%, 50%);">
                    <div class="row align-items-center justify-content-start">
                        <div class="col-lg-5 ml-4 pl-4 text-center solar-banner mx-auto">
                            <a href="/index.html" @Html.DxaPropertyMarkup(() => item.Link.LinkText) class="btn-exp">
								<h1 class="h4 text-white banner-text text-uppercase position-relative animated fadeInUp" @Html.DxaPropertyMarkup(() => item.Headline)>
									@item.Headline
								</h1>
							</a>
						
<!--						
                            <a href="#lightbox" data-toggle="modal" class="btn btn-light mt-4 py-3 px-4 jmb-btn text-uppercase animated fadeInUp delay-1s" @Html.DxaPropertyMarkup(() => item.Link.LinkText)>@item.Link.LinkText
							</a>-->
							
							    @if (item.Link.AlternateText == "homepage")
                            {
                            <a href="#lightbox" data-toggle="modal" class="btn btn-light mt-4 py-3 px-4 jmb-btn text-uppercase animated fadeInUp delay-1s" @Html.DxaPropertyMarkup(() => item.Link.LinkText)>@item.Link.LinkText</a>
                            }
                            else if (item.Link.AlternateText == "residential")
                            {
                                <a href="#createprofile" data-toggle="modal" class="btn btn-light mt-4 py-3 px-4 jmb-btn text-uppercase animated fadeInUp delay-1s" @Html.DxaPropertyMarkup(() => item.Link.LinkText)>@item.Link.LinkText</a>
                            }
							
                        </div>
                    </div>
                </div>

            </div>
        </section>
    }
}
